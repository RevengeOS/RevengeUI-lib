<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <com.revengeos.revengeui.button.RevengeUIButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenge standard" />

        <com.revengeos.revengeui.button.RevengeUIButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenge colored"
            style="@style/Widget.RevengeUI.Button.Colored"/>

        <com.revengeos.revengeui.button.RevengeUIButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenge borderless"
            style="@style/Widget.RevengeUI.Button.Borderless"/>


    </LinearLayout>

</FrameLayout>