<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.RevengeUI.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/revengeui_text_size_button</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="Widget.RevengeUI.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/revengeui_btn_default_mtrl_shape</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">8dp</item>
        <item name="springEffect">true</item>
    </style>

    <style name="Widget.RevengeUI.Button.Colored" parent="Widget.RevengeUI.Button">
        <item name="android:background">@drawable/revengeui_btn_colored</item>
    </style>

    <style name="Widget.RevengeUI.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="background">@null</item>
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/revengeui_seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="splitTrack">false</item>
    </style>

    <style name="Widget.RevengeUI.SeekBar.NotAnimated" parent="Widget.RevengeUI.SeekBar">
        <item name="android:thumb">@drawable/revengeui_seekbar_thumb_unpressed</item>
    </style>

    <style name="Widget.RevengeUI.SeekBar.Discrete" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="background">@null</item>
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/revengeui_seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="splitTrack">false</item>
    </style>
    
    <style name="Widget.RevengeUI.CompoundButton.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/revengeui_switch_track</item>
        <item name="android:thumb">@drawable/revengeui_switch_thumb</item>
        <item name="android:background">@null</item>
        <item name="android:showText">false</item>
    </style>

    <style name="Base.Widget.RevengeUI.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.RevengeUI.Toolbar.Title</item>
        <item name="popupTheme">@style/ThemeOverlay.RevengeUI.DayNight.ActionBar</item>
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="Widget.RevengeUI.Toolbar" parent="Base.Widget.RevengeUI.Toolbar">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TextAppearance.Widget.RevengeUI.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/revengeui_text_size_title_toolbar</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="TextAppearance.Widget.RevengeUI.Toolbar.Title.Expanded" parent="TextAppearance.Widget.RevengeUI.Toolbar.Title">
        <item name="android:textSize">@dimen/revengeui_text_size_title_toolbar_expanded</item>
    </style>

    <style name="ThemeOverlay.RevengeUI.DayNight.ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
    </style>

    <style name="Animation.RevengeUI.Dialog.Fullscreen" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="Theme.RevengeUI.Dialog.Fullscreen" parent="Theme.RevengeUI.DayNight">
        <item name="android:windowAnimationStyle">@style/Animation.RevengeUI.Dialog.Fullscreen</item>
    </style>

    <style name="Widget.RevengeUI.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="layout_behavior">com.revengeos.revengeui.appbar.FixedAppBarLayoutBehavior</item>
    </style>

    <style name="Widget.RevengeUI.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/revengeui_action_bar_size_expanded</item>
        <item name="expandedTitleGravity">bottom</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Widget.RevengeUI.Toolbar.Title.Expanded</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Widget.RevengeUI.Toolbar.Title</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="expandedTitleMarginStart">@dimen/revengeui_action_bar_expanded_title_margin_start</item>
        <item name="expandedTitleMarginBottom">@dimen/revengeui_action_bar_expanded_title_margin_bottom</item>
    </style>

    <style name="TextAppearance.Widget.RevengeUI.BottomNavigationView.Item" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="Widget.RevengeUI.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?colorBackgroundFloating</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Widget.RevengeUI.BottomNavigationView.Item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Widget.RevengeUI.BottomNavigationView.Item</item>
    </style>

</resources>